<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8">
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<meta name="http-equiv" content="X-UA-Compatible" content="ie=edge">
		<link rel="stylesheet" href="/dist/index.css">
		<title>Skribbl</title>
	</head>
	<body>
		<noscript>
			<h1>Skribbl requires JavaScript to run.</h1>
		</noscript>
		<div id="app">
			<div id="room-link" hidden>
				<div>
					Share this link with your friends to invite them to this room:
					<input type="text" id="room-link-input" readonly />
					<button type="button" data-copy-btn="room-link-input">
						Copy
					</button>
				</div>
			</div>
			<div class="main-container">
				<ul id="list-of-players" hidden></ul>
				<div class="rooms" id="lobby" data-current="true">
					<div>
						<form id="lobby-form" action novalidate>
							<input
								type="text"
								id="display-name"
								name="displayName"
								placeholder="Display Name"
								minlength="3"
								maxlength="20"
								required />
							<input
								type="hidden"
								value="{{roomId}}"
								id="room-id"
								name="roomId"
								readonly />
						</form>
						<div id="lobby-buttons-container">
							<button type="button" id="play-btn">
								Play
							</button>
							<button type="button" id="create-private-room-btn">
								Create Private Room
							</button>
						</div>
					</div>
				</div>
				<div class="rooms" id="waiting-room">
					<div data-for-host="true">
						<div data-waiting-text>
							Waiting for players to join...
						</div>
						<button type="button" id="start-game-btn">
							Start Game
						</button>
					</div>
					<div data-for-players="true">
						<div>
							Waiting for host to start the game...
						</div>
					</div>
				</div>
				<div class="rooms" id="playing-room">
					<div id="playing-room-header">
						<div id="time-left"></div>
						<div id="word-to-draw"></div>
					</div>
					<div id="playing-room-body">
						<canvas id="drawing-canvas" width="1280" height="720"></canvas>
						<div id="picking-a-word-modal">
							<div data-for-user-to-draw="true">
								<div>
									<div class="title-md">Choose a word to draw</div>
									<ul id="word-list"></ul>
								</div>
							</div>
							<div data-for-user-to-draw="false">
								<div>
									<span id="user-to-draw-username">
									</span>
									is picking a word...
								</div>
							</div>
						</div>
					</div>
				</div>

				<div id="chat" hidden>
					<ul id="list-of-chats"></ul>
					<form id="chat-form" action novalidate>
						<input
							type="text"
							autocomplete="off"
							autocapitalize="off" />
						<button>
							<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 16 16"
								fill="currentColor" style="width: 16px; height: 16px;">
								<path
									d="M2.87 2.298a.75.75 0 0 0-.812 1.021L3.39 6.624a1 1 0 0 0 .928.626H8.25a.75.75 0 0 1 0 1.5H4.318a1 1 0 0 0-.927.626l-1.333 3.305a.75.75 0 0 0 .811 1.022 24.89 24.89 0 0 0 11.668-5.115.75.75 0 0 0 0-1.175A24.89 24.89 0 0 0 2.869 2.298Z" />
							</svg>
						</button>
					</form>
				</div>
			</div>
		</div>
		<script src="/dist/index.js" type="module"></script>
	</body>
</html>
